{% extends 'base.html.twig' %}

{% block title %}Cadastro{% endblock %}

{% block add_in_head %}
    <link rel="stylesheet" href="{{asset('css/register/register.css')}}">
{% endblock %}

{% block body %}
    {% include 'parts/header/header.html.twig' %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="register">
        <h3 class="text">Register</h3>
    
        {{ form_start(registrationForm, {
            'attr': {
                'class': 'registration_form',
            }
        }) }}
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email)}}


            {{ form_widget(registrationForm.password)}}

            {{ form_label(registrationForm.cel, 'Celular')}}
            {{ form_widget(registrationForm.cel)}}
            
            <button type="submit" name="cadastrar" class="btn">Cadastrar</button>

            <div class="check-box">
                {{ form_label(registrationForm.agreeTerms, "Concorde com os termos") }}
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>

            {{ form_end(registrationForm) }}
    </div>

{% endblock %}
